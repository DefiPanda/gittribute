<% if @error.blank? %>
  <%= form_for(@comment) do |f| %>
    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>
    <%= f.hidden_field :repoid %>
    <%= f.hidden_field :userid, :value => session[:user_id] %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% else %>
  <%= link_to("/auth/github") do %>
    <i class="fa fa-github fa-2x"></i> To comment, please Sign in with Github <br><br>
  <% end %>
<% end %>